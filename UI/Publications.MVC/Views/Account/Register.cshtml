@*Для каждого контроллера необходимо создавать свою соответствующую папку
    и в ней создавать необходимые представления с названиями действий описанных в контроллерах.
*@

@*
    чтобы не прописывать так длинно можно добавить using в _ViewImports.cshtml
@model Publications.MVC.ViewModels.RegisterUserViewModel*@

@model RegisterUserViewModel

@{
    ViewBag.Title = "Регистрация нового пользователя.";
    Layout = "_LayoutSimple";
}

<div class="form-signin">
  <form asp-action="Register">

    <img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Регистрация</h1>

    @*место для отображения информации о валидации
        сюда будут выводиться сообщения с ошибками по всей модели целиком
    *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @*подобные блоки являются элементами ввода*@
    <div class="form-floating">
      <input asp-for="UserName" class="form-control" placeholder="Login">
      <label asp-for="UserName"></label>
      <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-floating">
      <input asp-for="Password" class="form-control" placeholder="Password">
      <label asp-for="Password"></label>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-floating">
      <input asp-for="PasswordConfirm" class="form-control" placeholder="Password">
      <label asp-for="PasswordConfirm"></label>
      <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Зарегистрироваться</button>
  </form>
</div>

@*подключение стилей*@
@section Styles
{
    <link rel="stylesheet" href="~/css/SignInForm.css" asp-append-version="true" />
}

